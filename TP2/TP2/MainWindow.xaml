<Window x:Class="TP2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TP2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#FFFFC8C8">
        <TextBox x:Name="input" HorizontalAlignment="Center" Margin="0,162,0,0" TextWrapping="Wrap" Text="Your Name" VerticalAlignment="Top" Width="120" TextChanged="input_TextChanged" Background="#FFFF9A9F" FontFamily="Goudy Old Style" BorderBrush="#FFE4166B" TextAlignment="Center"/>
        <Button x:Name="button" Content="click here" HorizontalAlignment="Center" Height="19" Margin="0,202,0,0" VerticalAlignment="Top" Width="77" Click="button_Click" Background="#FFD2494F" FontFamily="OCR-B 10 BT" BorderBrush="#FFE4166B"/>
        <TextBox x:Name="output" HorizontalAlignment="Left" Height="39" Margin="319,236,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="158" Background="{x:Null}" FontFamily="Goudy Old Style" TextAlignment="Center" BorderBrush="{x:Null}" TextChanged="output_TextChanged"/>

    </Grid>
</Window>
